---
import { Image } from 'astro:assets'

interface Props {
  title: string,
  alt: string,
  description: string,
  banner: string,
  href: string
}

const { title, description, banner, alt, href } = Astro.props
---

<div
	class='flex flex-col bg-zinc-100 border shadow-sm rounded-xl dark:bg-zinc-900 dark:border-zinc-800'
>
	<div class='p-4 md:p-5'>
		<h3 class='text-xl font-bold text-zinc-800 dark:text-zinc-100'>{title}</h3>
		<p class='mt-1 text-zinc-500 dark:text-zinc-400'>{description}</p>
	</div>
  <a href={href}>
    <Image
      width={300}
      height={180}
      class='rounded-b-xl m-1 brightness-90 hover:scale-[1.02]'
      src={banner}
      alt={alt}
    />
  </a>
</div>
