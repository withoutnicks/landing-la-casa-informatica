---
import { Image } from 'astro:assets';
import ExternalLinkSvg from '../svgs/ExternalLink_svg.astro';
import BadgeCard from './BadgeCard.astro';

interface Props {
	title: string;
	alt: string;
	description: string;
	banner: string;
	href: string;
	
	price?: number;
	duration?: string;
}

const { title, description, banner, alt, href, price, duration } = Astro.props;
---

<div class={`flex flex-col bg-zinc-100 border justify-between hover:scale-[1.02] shadow-sm rounded-xl dark:bg-zinc-900 dark:border-zinc-800`}>
	<div class='p-4 md:p-5'>
		<h3 class='text-xl font-bold text-zinc-800 dark:text-zinc-100 max-w-xs inline-flex w-full items-center justify-between'>
			{title}
			<a href={href} title="Ver mas informacion" aria-label="Visitar curso"><ExternalLinkSvg /> </a>
		</h3>
		<p class='mt-2 text-zinc-500 dark:text-zinc-400 max-w-xs'>{description}</p>
		{price && <BadgeCard text={`S/. ${price}`} color='green' />}
		{duration && <BadgeCard text={duration} color='blue' />}
	</div>
	<a href={href}>
		<Image width={360} height={200} class={`rounded-b-xl brightness-90`} src={banner} alt={alt} />
	</a>
</div>
