---
import { Image } from 'astro:assets';

interface Props {
	name: string;
	position: string;
	image: string;
}

const { name, position, image } = Astro.props;
---

<div class='flex items-center w-80 justify-center gap-4'>
	<Image
		width={100}
		height={100}
		src={image}
		alt={name}
		class={'inline-block shrink-0 size-20 md:size-[100px] rounded-full object-cover brightness-75'}
	/>
	<div class='w-40'>
		<h3 class='font-semibold text-xl text-gray-800 dark:text-white'>{name}</h3>
		<p class='text-lg font-medium text-yellow-600 dark:text-yellow-400/80'>{position}</p>
	</div>
</div>
