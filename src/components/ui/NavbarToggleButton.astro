---
import BarsSvg from '../svgs/Bars_svg.astro';
import CrossSvg from '../svgs/Cross_svg.astro';
---

<button
	type='button'
	class='hs-collapse-toggle relative size-9 flex justify-center items-center gap-x-2 rounded-lg border border-gray-200 bg-white text-gray-800 shadow-sm hover:bg-gray-50 focus:outline-none focus:bg-gray-50 disabled:opacity-50 disabled:pointer-events-none dark:bg-transparent dark:border-zinc-700 dark:text-white dark:hover:bg-white/10 dark:focus:bg-white/10'
	id='hs-navbar-example-collapse'
	aria-expanded='false'
	aria-controls='hs-navbar-example'
	aria-label='Toggle navigation'
	data-hs-collapse='#hs-navbar-example'
>
	<BarsSvg />
	<CrossSvg />
	<span class='sr-only'>Toggle navigation</span>
</button>
