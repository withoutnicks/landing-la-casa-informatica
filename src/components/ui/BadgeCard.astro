---
interface Props {
	text: string;
	color: 'green' | 'blue' | 'white';
}

const { text, color } = Astro.props;
---

<span
	class={`inline-flex items-center gap-x-1.5 py-1.5 px-3 rounded-full text-sm font-bold mt-2 tracking-wider
  ${color === 'green' 
  ? 'bg-teal-100 text-teal-800 dark:bg-teal-800/30 dark:text-teal-500'
	: color === 'white' 
	? 'border border-gray-200 bg-white text-gray-800 font-medium shadow-sm rounded-md mt-0 dark:bg-neutral-900 dark:border-neutral-700 dark:text-white'
  : 'bg-blue-100 text-blue-800 dark:bg-blue-800/30 dark:text-blue-500'}
`}
>
	{text}
</span>
