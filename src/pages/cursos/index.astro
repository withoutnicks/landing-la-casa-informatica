---
import FeaturedComponent from '../../components/FeaturedComponent.astro';
import Layout from '../../layouts/Layout.astro';
import CardButtonImage from '../../components/ui/CardButtonImage.astro';
import data from '../../mock/cursos.json';

export interface BasicCurse {
	id: number;
	key: string;
	title: string;
	description: string;
	banner: string;
	img_alt: string;
	href: string;
}
---

<Layout title='La casa informática | Listos para guiarte hacia la digitalización' howIsActive='cursos'>
	<FeaturedComponent title='Catálogo de Cursos'>
		{
			data.map((item) => (
				<CardButtonImage
					title={item.title}
					description={item.description}
					banner={item.banner}
					alt={item.img_alt}
					href={item.href}
					price={item.tags.price}
					duration={item.tags.duration}
					loadprimary={item.tags.loadprimary}
				/>
			))
		}
	</FeaturedComponent>
</Layout>
